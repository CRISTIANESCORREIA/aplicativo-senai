<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/empire"
    android:backgroundTint="@color/canary"
    android:orientation="vertical"
    tools:context=".view.MenuUsuarioActivity">


        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:justificationMode="inter_word"
            android:text="Bem-Vindo!!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <Button
            android:id="@+id/imgBtn_CadastroAlunos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="@string/cadastro"
            android:text="Pessoas"
            android:textSize="18dp"
            android:tooltipText="Cadastro de Alunos"
            app:icon="@drawable/ic_baseline_account_circle_24" />


        <Button
            android:id="@+id/imgBtn_CadastroTurma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="@string/cadastro"
            android:text="Turmas"
            android:textSize="18dp"
            android:tooltipText="Cadastro de Alunos"
            app:icon="@drawable/ic_baseline_supervised_user_circle_24" />

        <Button
            android:id="@+id/btnAtividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="@string/cadastro"
            android:text="Atividades"
            android:textSize="18dp"
            android:tooltipText="Cadastro de Alunos"
            app:icon="@drawable/ic_baseline_text_snippet_24" />


        <Button
            android:id="@+id/imgBtnSobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="@string/cadastro"
            android:text="Sobre"
            android:textSize="18dp"
            app:icon="@drawable/ic_baseline_ad_units_24" />

        <Button
            android:id="@+id/imgBtnConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="@string/cadastro"
            android:text="Configurações"
            android:textSize="18dp"
            app:icon="@drawable/ic_baseline_settings_24" />

        <Button
            android:id="@+id/imgBtnSair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:contentDescription="sair"
            android:text="Sair"
            android:textSize="18dp"
            android:tooltipText="Associar Aluno com turma"
            app:icon="@drawable/ic_baseline_logout_24" />

</LinearLayout>

