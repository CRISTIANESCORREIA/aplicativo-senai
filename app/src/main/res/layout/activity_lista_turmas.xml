<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/empire"
    tools:context=".view.ListaTurmasActivity">

    <View
        android:id="@+id/containerTop1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_view_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewTitulo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logosenai"
        app:layout_constraintBottom_toBottomOf="@id/containerTop1"
        app:layout_constraintEnd_toEndOf="@id/containerTop1"
        app:layout_constraintStart_toStartOf="@id/containerTop1"
        app:layout_constraintTop_toTopOf="@id/containerTop1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="Lista de Turmas"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerTop1" />

    <Button
        android:id="@+id/btnCadastroTurma"
        android:layout_width="169dp"
        android:layout_height="52dp"
        android:text=" Nova Turma"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview_turmas" />

    <ListView
        android:id="@+id/listview_turmas"
        android:layout_width="409dp"
        android:layout_height="243dp"
        android:layout_marginEnd="2dp"
        android:entries="@array/turmas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>